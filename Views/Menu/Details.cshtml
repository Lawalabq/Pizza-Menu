@model WebApplication1.Models.Dish
@{
	ViewData["Title"] ="Details";

}

<div class="container">
	<div class="d-flex justify-context-center">
		<h3>@Model.name</h3>
	</div>
	<div class="d-flex justify-content-center">
		<img src="@Model.ImageUrl" style="width: 7%" />
	</div>
	<div class="d-flex justify-content-center">
		@Model.Price.ToString("N2") Dollars
	</div>
	<div class="d-flex justify-context-center">
	Ingredients
	<ul>
		@foreach(var item in Model.DishIngredients)
		{
		<li>
			@item.Ingredient.Name
		</li>
		}
	</ul>
	<a asp-action="Index" class="btn btn-info">Return To Menu</a>
</div>
</div>


