@model List<WebApplication1.Models.Dish>
@{
	ViewData["Title"] = "MenuIndex";
}

<div class="Container" >
	<div class="row">
		@foreach(var item in Model)
		{
			<div class="col-6">
				<div class="d-flex justify-content-center">
					<h5>@item.name </h5>
				</div>
				
			</div>
			<div class="d-flex justify-content-center">
				<img src="@item.ImageUrl" style="width: 30%"/>
			</div>
			<div class="d-flex justify-content-center">
				@item.Price.ToString("N2") Dollars
			</div>
			<div class="d-flex justify-content-center">
				<a class="btn btn-info" asp-action="Details" asp-route-id="@item.id"> Details</a>
			</div>
			
			
			
		}
	</div>
</div>
